<%- include('../top.ejs') -%>
  <%- include('../header.ejs') -%>
    <%- include('../sidenav.ejs') -%>

      <div id="main">
        <div class="row">
          <div class="content-wrapper-before gradient-45deg-indigo-light-blue "></div>
          <div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
            <!-- Search for small screen-->
            <div class="container">
              <div class="row">
                <div class="col s10 m6 l6">
                  <h5 class="breadcrumbs-title mt-0 mb-0"><span>Add Campaign</span></h5>
                  <ol class="breadcrumbs mb-0">
                    <li class="breadcrumb-item"><a href="/dashboard">Home</a>
                    </li>
                    <li class="breadcrumb-item"><a href="/campaign">Campaigns</a>
                    </li>
                    <li class="breadcrumb-item active">Add
                    </li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s12 m12 l12">
            <div id="Form-advance" class="card card card-default scrollspy">
              <div class="card-content">
                <h4 class="card-title">Add Campaign</h4>
                <form id="formValidateCampaign" action="/campaign/addCampaign" method="post">
                  <div class="row">
                    <div class="input-field col s12">
                      <label for="name">Name</label>
                      <input id="name" name="name" type="text" data-error=".errorTxt1" />
                      <small class="errorTxt1"></small>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <label for="cases">No of Cases</label>
                      <input id="cases" name="cases" type="text" data-error=".errorTxt2" />
                      <small class="errorTxt2"></small>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col m6 s12">
                      <label for="start_date">Start Date</label>
                      <input placeholder="Date" id="start_date" name="start_date" type="date" data-error=".errorTxt3" />
                      <small class="errorTxt3"></small>
                    </div>
                    <div class="input-field col m6 s12">
                      <label for="end_date">End Date</label>
                      <input placeholder="Date" id="end_date" name="end_date" type="date" data-error=".errorTxt4" />
                      <small class="errorTxt4"></small>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col m6 s12">
                      <label for="no_of_leads">No of Leads</label>
                      <input id="no_of_leads" name="no_of_leads" type="text" data-error=".errorTxt5" />
                      <small class="errorTxt5"></small>
                    </div>
                    <div class="input-field col m6 s12">
                      <label for="leads_pending">Pending Leads</label>
                      <input id="leads_pending" name="leads_pending" type="text" data-error=".errorTxt6" />
                      <small class="errorTxt6"></small>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col m6 s12">
                      <label for="leads_open">No of LeadsOpen</label>
                      <input id="leads_open" name="leads_open" type="text" data-error=".errorTxt7" />
                      <small class="errorTxt7"></small>
                    </div>
                    <div class="input-field col m6 s12">
                      <label for="leads_closed">No of LeadsClose</label>
                      <input id="leads_closed" name="leads_closed" type="text" data-error=".errorTxt8" />
                      <small class="errorTxt8"></small>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <a class="btn waves-effect waves-light gradient-45deg-purple-deep-orange float-right"
                        href="/enquiries">Cancel</a>
                      <button class="btn cyan waves-effect waves-light right mr-2" type="submit" id="addcampaign">
                        Save</button>
                    </div>
                  </div>

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>

      <%- include('../bottom.ejs') -%>