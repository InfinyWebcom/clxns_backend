<%- include('../../../top.ejs') -%>
<%- include('../../../header.ejs') -%>
<%- include('../../../sidenav.ejs') -%>

<div id="main">
    <div class="row">
        <div class="content-wrapper-before gradient-45deg-indigo-light-blue "></div>
        <div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col s10 m6 l6">
                        <h5 class="breadcrumbs-title mt-0 mb-0"><span>Add a new role</span></h5>
                        <ol class="breadcrumbs mb-0">
                            <!-- <li class="breadcrumb-item"><a href="/dashboard">Home</a>
                            </li> -->
                            <li class="breadcrumb-item"><a href="/permissions">Permissions</a>
                            </li>
                            <li class="breadcrumb-item active">Add Role
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="container">
                <div class="section section-data-tables">
                    <div class="card roundCorners" style="margin-top: 50px;">
                        <div class="card-content">
                            <p class="caption mb-0">
                                Create a new role here and assign permissions to various modules.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="container">
                <section class="tabs-vertical section">
                    <div class="row">
                        <div class="col l12 s12">
                            <div id="general">
                                <form class="validateAddRole" id="validateAddRole" method="POST" action="/permissions/addRoles">
                                    <div class="card-panel roundCorners">
                                        <div class="row">
                                            <div class="row">
                                                <div class="col s6">
                                                    <div class="input-field">
                                                        <label for="name">Role Name</label>
                                                        <input type="text" id="name" name="name"
                                                            data-error=".errorTxt1">
                                                        <small class="errorTxt1"></small>
                                                    </div>
                                                </div>
                                                <div class="col s6">
                                                    <div class="input-field">
                                                        <label for="name">Display Name</label>
                                                        <input type="text" id="displayName" name="displayName"
                                                            data-error=".errorTxt2">
                                                        <small class="errorTxt2"></small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col s6">
                                                        <label for="name">Level</label>
                                                        <div class="input-field mt-0">
                                                            <select class="error" id="level" name="level" required
                                                                data-error=".errorTxt3">
                                                                <option value="" disabled selected>Choose Level
                                                                </option>
                                                                <option value="1">1</option>
                                                                <option value="2">2</option>
                                                                <option value="3">3</option>
                                                                <option value="4">4</option>
                                                            </select>
                                                            <small class="errorTxt3"></small>
                                                        </div>
                                                </div>
                                                <div class="col s6">
                                                    <label for="type">Type</label>
                                                    <div class="input-field mt-0">
                                                        <select class="error" id="type" name="type" required
                                                            data-error=".errorTxt4">
                                                            <option value="" disabled selected>Choose Type
                                                            </option>
                                                            <option value="backoffice">Backoffice</option>
                                                            <option value="field">Field</option>
                                                        </select>
                                                        <small class="errorTxt4"></small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col s12 display-flex justify-content-end form-action mt-3">
                                                    <button type="submit"
                                                        class="btn blue darken-1 waves-effect waves-light mr-2" id="addRole">
                                                        Save
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

<%- include('../../../bottom.ejs') -%>